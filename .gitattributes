# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Export ignore (files not included in GitHub archives)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests/ export-ignore
Docs/ export-ignore
docker/ export-ignore

